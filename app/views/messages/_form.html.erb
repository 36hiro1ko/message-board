<%= form_for(@message) do |f| %>

<% if @message.errors.present? %>
  <div class="alert alert-danger">
    <%= alert %>
    <ul>
      <% @message.errors.full_messages.each do |full_message| %>
        <li>
          <%= full_message %>
        </li>
      <% end %> 
    </ul>
  </div>
  <% end %>
  
  
  
  <div class="form-group">
  <%= f.label :name, 'なまえ' %>
  <%= f.text_field :name, class: "form-control", placeholder: "なまえ" %>
  </div>
  
  <div class="form-group">
  <%= f.label :age, '年齢' %>
  <%= f.text_field :age, class: "form-control", placeholder: "年齢" %>
  </div>
  
  <div class="form-group">
  <%= f.label :body, 'メッセージ' %>
  <%= f.text_area :body, class:"form-control", placeholder: "メッセージ" %>
  </div>
   
  <div class="form-group">
  <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>

<% end %>